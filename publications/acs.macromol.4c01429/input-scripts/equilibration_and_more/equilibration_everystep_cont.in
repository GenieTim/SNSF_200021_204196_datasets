#LAMMPS input file: Calculate the modulus from autocorrelation

units           lj
atom_style      angle
special_bonds   fene

bond_style      fene

pair_style	lj/cut 1.12246
angle_style fourier/simple
echo both

read_restart &restart-file

neighbor        0.95 bin
neigh_modify    every 2 delay 0 check yes

bond_coeff	1 30.0 1.5 1.0 1.0
angle_coeff 	1 0.013 -1.0 1.0
pair_coeff  * * 1.0 1.0 1.12246
pair_modify     shift yes

fix             1 all nve
fix             2 all langevin 1.0 1.0 0.5 &rand-seed # zero yes

timestep 0.01 # 0.006

# after first run, we can reduce comm req.
comm_modify     mode single cutoff 2.5 vel no

variable tstep equal step

# dump coordinates regularly to externally calculate Ree and Rgyr
dump		1 all custom 1000000 &output-folder/t-${tstep}-&output-basename.dump.out id type x y z ix iy iz # id = atom id, type = atom type, (x|y|z)su are coordinates without periodic boundary scaled by box size

compute allBondLen all bond/local dist
compute maxBondLen all reduce max c_allBondLen
compute aveBondLen all reduce ave c_allBondLen

restart 50000 &output-folder/t-${tstep}-&output-basename.restart-1.out &output-folder/t-${tstep}-&output-basename.restart-2.out

# compute stresses
# compute stressA all stress/atom NULL
# compute pA all reduce ave c_stressA[*6]
compute pA all pressure thermo_temp
compute pAv all pressure NULL virial

fix 5 all ave/time 1 1 1 c_pAv[1] c_pAv[2] c_pAv[3] c_pAv[4] c_pAv[5] c_pAv[6] mode scalar ave one file &output-folder/t-${tstep}-&output-basename.out.press.txt
fix 6 all ave/time 1 1 1 c_pA[1] c_pA[2] c_pA[3] c_pA[4] c_pA[5] c_pA[6] mode scalar ave one file &output-folder/t-${tstep}-&output-basename.out.press-withkin.txt

thermo_style    custom step temp vol press c_maxBondLen c_aveBondLen c_pA[1] c_pA[2] c_pA[3] c_pA[4] c_pA[5] c_pA[6] 

run 50000000 # 5e7

write_data structure/t-${tstep}-&output-basename.structure.out

run 50000000 # 5e7

write_data structure/t-${tstep}-&output-basename.structure.out
